<Window x:Class="SampleWPFApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SampleWPFApp.ViewModels"
        Title="MainWindow" Height="750" Width="850">

    <Window.Resources>

    </Window.Resources>
    <Grid>
        <StackPanel>
            <ComboBox ItemsSource="{Binding Graphs}" DisplayMemberPath="Name" SelectionChanged="ComboBox_SelectionChanged"/>
            <Canvas Height="510" Width="510" Margin="0,0,0,0" x:Name="DrawingArea" HorizontalAlignment="Center" VerticalAlignment="Center" >
            </Canvas>
        </StackPanel>
    </Grid>
</Window>
